CC=@CC@
AR=@AR@
RANLIB=@RANLIB@

BINDIR=@exedir@
MANDIR=@mandir@

PGM=markdown
MKDLIB=libmarkdown.a
OBJS=mkdio.o markdown.o

all: $(PGM)

install: $(PGM)
	@INSTALL_PROGRAM@ $(PGM) $(BINDIR)
	@MKSUID@ $(BINDIR)/$(PGM)

# install.man:
# 	@INSTALL_DIR@ $(MANDIR)/man1
# 	@INSTALL_DATA@ pstree.1 $(MANDIR)/man1

version.o: VERSION
	echo 'char version[] = VERSION;' > version.c && \
	    $(CC) -DVERSION=\"`cat VERSION`\" -c version.c

$(PGM): main.c version.o $(MKDLIB)
	$(CC) -o $(PGM) -DPROGRAM=1 main.c version.o $(MKDLIB) @LIBS@

$(MKDLIB): $(OBJS)
	$(AR) crv $(MKDLIB) $(OBJS)
	$(RANLIB) $(MKDLIB)

clean:
	rm -f $(PGM) *.o

distclean spotless: clean
	rm -f @GENERATED_FILES@ @CONFIGURE_FILES@


markdown.o: markdown.c config.h cstring.h
mkdio.o: mkdio.c mkdio.h cstring.h
$(PGM): mkdio.h config.h
