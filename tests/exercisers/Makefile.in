# build and run various internal code verifiers


THINGS=flags


all: programs run
	@:

programs: $(THINGS)
	@:

flags: flags.c
	$(BUILD) -I$(TOPDIR) -c flags.c
	$(LINK) -L$(TOPDIR) -o flags flags.o -lmarkdown

run:
	@for x in $(THINGS); do @LD_LIBRARY_PATH@=$(TOPDIR) ./$$x || exit 1; done

clean:
	rm -f $(THINGS) *.o

spotless: clean
	rm -f Makefile
